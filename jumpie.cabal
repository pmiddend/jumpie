name:                jumpie
version:             0.1.0.0
synopsis:            A simple jump and run game
-- description:
homepage:            http://github.com/pmiddend/jumpie
license:             GPL-3
license-file:        LICENSE
author:              Philipp Middendorf
maintainer:          pmidden+jumpie@secure.mailbox.org
-- copyright:
category:            Game
build-type:          Simple
cabal-version:       >=1.8

executable jumpie
  main-is:             Jumpie/Main.hs
  -- other-modules:
  hs-source-dirs:      src
  build-depends:       transformers,
                       mtl,
                       base >= 4.6,
                       clock,
                       MonadRandom,
                       filepath,
                       directory,
                       composition,
                       containers,
                       random,
                       bifunctors,
                       wrench,
                       classy-prelude,
                       lens,
                       linear
  ghc-options: -Wall
  extensions: NoImplicitPrelude

